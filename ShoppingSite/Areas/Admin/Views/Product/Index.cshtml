@model IEnumerable<ShoppingSite.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Ürün Ekle</a>
    </p>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Resim
                </th>
                <th>
                    Ürün Adı
                </th>
                <th>
                    Fiyat
                </th>
                <th>
                    Anasayfa
                </th>
                <th>
                    Stok
                </th>
                <th>
                    Kategori
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if(item.Image==null)
                        {
                            <img src="~/images/image/resim-yok.png" width="80px" height="80px" />
                        }
                        else
                        {
                            <img src="@item.Image" width="80px" height="80px">
                        }
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @if (item.IsHome)
                        {
                            <label class="btn btn-outline-success">Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-outline-danger"></label>
                        }

                    </td>
                    <td>
                        @if (item.IsHome)
                        {
                            <label class="btn btn-outline-success">Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-outline-danger"></label>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
                            <i class="bi bi-pencil"></i>
                            Düzenle
                        </a> 
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">
                            <i class="bi bi-info-circle"></i>
                            Detaylar
                        </a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>
}
