@model IEnumerable<Category>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="col-md-3">
    <div class="card">
        <div class="list-group">
            <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action" style="cursor:pointer">Tüm Ürünler</a>
            @foreach(var item in Model)
            {
                <a asp-controller="Home" asp-action="CategoryDetails" asp-route-id="@item.Id" class="list-group-item list-group-item-action" style="cursor:pointer">@item.Name</a>

            }
            
        </div>
    </div>
</div>